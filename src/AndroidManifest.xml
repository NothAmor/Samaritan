<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.thetorine.samaritan" >
    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="21" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:versionCode="3"
        android:versionName="1.2" >
        <activity
            android:name="com.thetorine.android.samaritan.InputActivity"
            android:label="@string/app_name"
            android:theme="@style/MainTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.thetorine.android.samaritan.TextActivity"
            android:label="@string/title_activity_text"
            android:theme="@style/TextWhiteTheme" 
            android:screenOrientation="portrait"
    		android:configChanges="keyboardHidden|orientation|screenSize">
        </activity>
        <activity
            android:name="com.thetorine.android.samaritan.TextActivityLandscape"
            android:label="@string/title_activity_text"
            android:theme="@style/TextWhiteTheme" 
            android:screenOrientation="landscape"
    		android:configChanges="keyboardHidden|orientation|screenSize">
        </activity>
        <activity
            android:name="com.thetorine.android.samaritan.PreferencesActivity"
            android:label="Settings"
            android:theme="@style/MainTheme">
        </activity>
    </application>

</manifest>
